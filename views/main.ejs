    <div class = "main" id = "main_window">
        <div class = "main_left">
            <div class = "main_videos">
                <div id="video-grid" class="video-grid">
                    <video id="screen-share" class="screen"></video>
                </div>
            </div>
            <div class = "main_controls">
                <div class = "block">
                    <div onclick = "muteFunc()" class = "button1 micButton" title="Mic">
                        <i class="fas fa-microphone-slash"></i>
                    </div>
                    <div class = "vl"></div>
                    <div onclick = "vidFunc()" class = "button1 vidButton" title="Video">
                        <i class="fas fa-video-slash"></i>
                    </div>
                    <div class = "vl"></div>
                    <div onclick = "screenShareFunc()" class = "button1 scrButton" title="Share Screen" id="scrButton">
                        <i class="fas fa-desktop"></i>
                    </div>
                    <div class = "vl"></div>
                    <div onclick = "toggleUsers()" class = "button1" id="users_button" title="Users">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class = "vl"></div>
                    <div onclick="toggleChat()" class = "button1" id="chat_button" title="Chat">
                        <i class="fas fa-comment-alt"></i>
                    </div>
                    <div class = "vl"></div>
                    <div onclick="leaveMeeting()" class = "button1" id="leave_button" title="Leave">
                        <i class="fas fa-phone-slash"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class = "main_right" id="main_right">
            <div class="main_chat" id="main_chat">
                <div class = "chat_header">
                    <span>Chat</span>
                </div>
                <hr/>
                <div class = "chat_window" id="chat_window">
                    <ul class = "messages" id = "chat_list"></ul>
                </div>
                <hr/>
                <div class = "chat_container">
                    <input id="chat_box" type="text" placeholder="Chat with everyone" name="chat_box">
                    <i class="fas fa-paper-plane" onclick="sendMessage()" title="Send"></i>
                </div>
            </div>
            <div class="main_users" id="main_users">
                <div class = "chat_header" id="chat_header">
                    <span>Users</span>
                </div>
                <hr/>
                <div class = "chat_window" id="chat_window">
                    <ul class="users_list"></ul>
                </div>
            </div>
